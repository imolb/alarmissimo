{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Start Chrome Debug",
      "preLaunchTask": "Start Chrome with Debug Port",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}",
      "port": 9222,
      "pathMapping": {
        "/": "${workspaceFolder}/",
        "/src/": "${workspaceFolder}/src/"
      }
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "urlFilter": "http://localhost:8000*",
      "pathMapping": {
        "/": "${workspaceFolder}/",
        "/src/": "${workspaceFolder}/src/"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Start Google Chrome with Debug Port",
      "runtimeExecutable": "/usr/bin/google-chrome-stable",
      "url": "http://localhost:8000/src/index.html",
      "webRoot": "${workspaceFolder}",
      "port": 9222,
      "pathMapping": {
        "/": "${workspaceFolder}/",
        "/src/": "${workspaceFolder}/src/"
      }
    }
  ]
}


