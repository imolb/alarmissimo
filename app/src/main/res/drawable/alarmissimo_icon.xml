  <path d="M183 218 Q205 205 227 215" stroke="#333" stroke-width="7" fill="none" stroke-linecap="round"/>
  <path d="M285 215 Q307 203 329 215" stroke="#333" stroke-width="7" fill="none" stroke-linecap="round"/>

