  <!-- Left eye -->
  <ellipse cx="205" cy="248" rx="24" ry="28" fill="white" stroke="#333" stroke-width="4"/>
  <circle cx="205" cy="252" r="14" fill="#333"/>
  <circle cx="210" cy="246" r="5" fill="white"/>
