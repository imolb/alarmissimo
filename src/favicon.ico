<?xml version="1.0" encoding="UTF-8"?>
<svg width="64" height="64" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <!-- Clock face -->
  <circle cx="32" cy="32" r="30" fill="#2c3e50" stroke="#ffffff" stroke-width="2"/>
  
  <!-- Clock numbers -->
  <g fill="#ffffff" font-family="Arial" font-size="10" text-anchor="middle">
    <text x="32" y="8">12</text>
    <text x="56" y="36">3</text>
    <text x="32" y="56">6</text>
    <text x="8" y="36">9</text>
  </g>
  
  <!-- Hour hand -->
  <line x1="32" y1="32" x2="32" y2="16" stroke="#ffffff" stroke-width="3" stroke-linecap="round"/>
  
  <!-- Minute hand -->
  <line x1="32" y1="32" x2="32" y2="8" stroke="#ffffff" stroke-width="2" stroke-linecap="round"/>
  
  <!-- Center dot -->
  <circle cx="32" cy="32" r="3" fill="#ffffff"/>
  
  <!-- Bell indicator (sound waves) -->
  <g stroke="#3498db" stroke-width="1.5" fill="none">
    <path d="M 48 20 Q 52 24 52 32"/>
    <path d="M 50 18 Q 56 24 56 32"/>
  </g>
</svg>
